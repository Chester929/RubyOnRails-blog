<% flash.each do |key, value| %>
  <% case key %>
    <% when 'notice' %>
      <div class="alert alert-success"> <span class="glyphicon glyphicon-ok"></span> <%=value%> </div>
    <% when 'alert' %>
      <div class="alert alert-warning"> <span class="glyphicon glyphicon-bell"></span> <%=value%></div>
    <% when 'error' %>
      <div class="alert alert-danger"> <span class="glyphicon glyphicon-exclamation-sign"></span> <%=value%></div>
  <% end %>
<% end %>
