<p id="notice"> <%= notice %> </p>

<h1>Articles</h1>
<hr>

<div class="bg-info">
  <% @articles.each do |article| %>

    <p class="bg-primary lead"><%= article.title %></p>

    <p> <%= article.body %> </p>

    <%= link_to 'Show', article, :class => 'btn btn-default btn-xs' %>

    <hr>

  <% end %>
</div>

<br />

<%= link_to 'New article', new_article_path, :class => 'btn btn-success' %>
