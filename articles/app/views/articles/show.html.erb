<div class "jumbotron">
  <div class="container">
    <div class="btn-toolbar article-button-bar-pt article-button-bar-pl" role="toolbar">
      <%= render 'shared/btnbox' %>
    </div>
    <div class="page-header">
      <h1> <%= @article.title %></h1>
      <h1><small> <%= @article.caption %> </small></h1>
    </div>

    <%= image_tag @article.image.thumb("300x200#").url, class:"col-xs-4 img-responsive article-image" if @article.image_stored? %>
    <div class="lead text-justify article-text"> <%= raw(@article.body) %> </div>

    <div class="btn-toolbar article-button-bar-pl" role="toolbar">
      <%= render 'shared/btnbox' %>
    </div>

    <hr>
    <%= render 'shared/comments' %>
    <hr>

    <div class="btn-toolbar article-button-bar-pt article-button-bar-pl" role="toolbar">
      <%= render 'shared/btnbox' %>
    </div>

  </div>
</div>
